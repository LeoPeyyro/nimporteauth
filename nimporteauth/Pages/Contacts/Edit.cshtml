@page
@model nimporteauth.Pages.Contacts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Contact.Id" />
            <div class="form-group">
                <label asp-for="Contact.prenom" class="control-label"></label>
                <input asp-for="Contact.prenom" class="form-control" />
                <span asp-validation-for="Contact.prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.nom" class="control-label"></label>
                <input asp-for="Contact.nom" class="form-control" />
                <span asp-validation-for="Contact.nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.email" class="control-label"></label>
                <input asp-for="Contact.email" class="form-control" />
                <span asp-validation-for="Contact.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.estPro" class="control-label">Pro</label>
                <input asp-for="Contact.estPro" type="checkbox"/>
                <span asp-validation-for="Contact.estPro"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contact.groupe" class="control-label"></label>

                <select asp-for="Contact.groupeId" asp-items="Model.GroupList" class="form-control">
                    <option value="Contact.groupe">Sélectionnez un groupe</option>
                </select>

                <span asp-validation-for="Contact.groupe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
